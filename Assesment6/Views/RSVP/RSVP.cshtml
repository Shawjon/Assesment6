@model Assesment6.Models.Person

@{
    ViewBag.Title = "RSVP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RSVP</h2>


@using (Html.BeginForm("Summary", "RSVP", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
    <fieldset class="mt-4">

        <div class="form-group required">
            <label class='control-label'>First Name</label>
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", type = "text", id = "text", required = "required", placeholder = "First Name" })
        </div>
        <div class="form-group required">
            <label class='control-label'>Last Name</label>
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", type = "text", id = "text", required = "required", placeholder = "Last Name" })
        </div>
        <div class="form-group required">
            <label class='control-label'>Email</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", required = "required", placeholder = "Email" })
        </div>
        <div class="form-group mt-2">
            <label>Will you be attending?</label>
            @Html.DropDownListFor(model => model.Attending, new List<SelectListItem>
                { new SelectListItem{Text="Yes", Value="true"},
                  new SelectListItem{Text="No", Value="false"}},
                  new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group mt-2">
            <label>Date attending?</label>
            @Html.DropDownListFor(model => model.DateAttending, new List<SelectListItem>
                { new SelectListItem{Text="N/A", Value="N/A"},
                  new SelectListItem{Text="12/15/18", Value="12/15/18"},
                  new SelectListItem{Text="12/22/18", Value="12/22/18"}},
                 new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group">

            <label class='control-label'>Guest (Not required)</label>
            @Html.TextBoxFor(model => model.Guest, new { @class = "form-control", type = "text", placeholder = "Guest Name" })
        </div>
    </fieldset>
    <br />
    <input type="submit" value="Rsvp" class="btn btn-info btn-sm" />
}
<script type="text/javascript" src="~/Scripts/JavaScript.js"></script>
@Scripts.Render("~/bundles/jqueryval")


