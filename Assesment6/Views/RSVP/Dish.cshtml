@model Assesment6.Models.Dish

@{
    ViewBag.Title = "Dish";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dish</h2>
<h2>RSVP</h2>


@using (Html.BeginForm("DishSummary", "RSVP", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <fieldset class="mt-4">

        <div class="form-group required">
            <label class='control-label'>Your Name</label>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", type = "text", id = "text", required = "required", placeholder = "Your Name" })
        </div>
        <div class="form-group required">
            <label class='control-label'>Dish Name</label>
            @Html.TextBoxFor(model => model.DishName, new { @class = "form-control", type = "text", id = "text", required = "required", placeholder = "Dish Name" })
        </div>
        <div class="form-group required">
            <label class='control-label'>Description</label>
            @Html.TextBoxFor(model => model.DishDescription, new { @class = "form-control", type = "text", required = "required", placeholder = "Description" })
        </div>
        <div class="form-group mt-2">
            <label>Any Dietary Restrictions?</label>
            @Html.DropDownListFor(model => model.Dietary, new List<SelectListItem>
                { new SelectListItem{Text="N/A", Value="N/A"},
                  new SelectListItem{Text="Gluten Free", Value="Gluten Free"},
                  new SelectListItem { Text = "Vegetarian", Value = "Vegetarian" },
                  new SelectListItem { Text = "Vegan", Value = "Vegan" },
                  
                },
                "Please select", new { @class = "form-control"})
        </div>
        
      
    </fieldset>

    <br />


    <input type="submit" value="Submit" class="btn btn-info btn-sm" />
}

<script type="text/javascript" src="~/Scripts/JavaScript.js"></script>
